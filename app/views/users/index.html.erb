<div class="container">
  <div class="row">
    <!-- 左カラム -->
    <div class="col-md-3">
      <%= render 'userinfo', user: @user, profile_user: @user %>
      <%= render 'newbook', book: @book %>
    </div>

    <div class="col-md-8 offset-md-1">
      <h2>Users</h2>

      <% @users.each do |user| %>
        <table class="table">
          <thead>
            <tr>
              <th>image</th>
              <th>name</th>
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <tr>
              <td>
              <%= link_to user_path(user.id) do %>
                <%= image_tag user.get_profile_image(100,100) %>
              <% end %>
              </td>

              <td><%= user.name %></td>

              <td><%= link_to "show", user_path(user) %></td>
            </tr>
          </tbody>
        </table>

    <% end %>
  </div>
</div>