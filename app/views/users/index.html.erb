<%= render 'userinfo', user: @user, profile_user: @user %>
<%= render 'newbook', book: @book %>

<h1>Users</h1>

<% @users.each do |user| %>
  <table>
    <tr>
      <th>image</th>
      <td>
      <%= link_to user_path(user.id) do %>
        <%= image_tag user.get_profile_image(100,100) %>
      <% end %>
      </td>
    </tr>
    <tr>
      <th>name</th>
      <td><%= user.name %></td>
    </tr>
    <tr>
      <td><%= link_to "show", user_path(user) %></td>
    </tr>
  </table>

<% end %>